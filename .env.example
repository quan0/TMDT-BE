# Copy this file to .env and adjust values

# Server
SPRING_PROFILES_ACTIVE=dev
PORT=8000
SERVER_ADDRESS=0.0.0.0
APP_NAME=TMDTbackend
APP_BASE_URL=http://localhost:8000

# Database (PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/tmdt
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME

# When running via Docker Compose, the DB host is the service name:
# DB_URL=jdbc:postgresql://postgres:5432/tmdt

# SQL Initialization
# never  = do not run seed.sql
# always = run seed.sql on every app start (WARNING: typically wipes data)
SQL_INIT_MODE=never
SQL_INIT_DATALOCATION=classpath:db/seed.sql

# JPA
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=true

# JWT
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING
JWT_ISSUER=mindwell
JWT_ACCESS_TTL_SECONDS=86400

# Swagger / OpenAPI (springdoc)
SWAGGER_ENABLED=true

# VNPAY Configuration
VNPAY_TMN_CODE=
VNPAY_HASH_SECRET=
VNPAY_PAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html